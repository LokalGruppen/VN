<?xml version="1.0" encoding="utf-8"?>
<extension type="template" version="4.0" method="upgrade">
  <name>Visit Nordic</name>
  <creationDate>2023-10-30</creationDate>
  <author>LokalNyt</author>
  <authorEmail>info@lokalnyt.com</authorEmail>
  <authorUrl>http://www.lokalnyt.com</authorUrl>
  <copyright>Copyright (C) 2023 LokalNyt. All rights reserved.</copyright>
  <license>GNU General Public License</license>
  <version>4.0.0</version>
  <description>Visit Nordic Joomla 4 Template</description>
  
	<files>
		<folder>assets</folder>
		<folder>dist</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>includes</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
		<filename>webpack.config.dev.js</filename>
		<filename>webpack.config.prod.js</filename>
		<filename>yarn.lock</filename>
		<filename>package.json</filename>
	</files>
    <positions>
		<position>top</position>
		<position>navigation</position>
		<position>fullwidth-outside</position>
		<position>fullwidth</position>
        <position>showcase</position>
		<position>feature</position>
        <position>breadcrumbs</position>
        <position>mobilmenu</position>
		<position>frontpage</position>
		<position>frontpage-right</position>
        <position>right</position>
        <position>content-top</position>
        <position>content-bottom</position>
        <position>bottom</position>    
        <position>footer</position>
        <position>copy</position>
		<position>debug</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="leftColumnWidth" type="list" default="3" label="Left Column Width" description="Choose a width for your left column">
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<field name="rightColumnWidth" type="list" default="3" label="Right Column Width" description="Choose a width for your right column">
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<!-- SHOW FRONTPAGE-->	
				<field name="frontpageshow" type="radio" class="btn-group" default="1" label="Show FrontPage Articles" description="Show FrontPage Articles">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<!-- LOGO-->
			<fieldset  name="logo" type="upload_func" label="Logo">
					<field name="logo_file" type="media" label="Select your logo:"></field>
					<field name="logo_link" type="text" label="Logo link:"  description="Example: http://www.example.com"></field>
					<field name="logo_width" type="text" label="Logo width:" description="Example: 90"></field>
					<field name="logo_height" type="text" label="Logo height:" description="Example: 90"></field>
			</fieldset>
			</fields>
	</config>
</extension>